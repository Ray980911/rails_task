<h2>アサイン</h2>
<%= form_with(model: @task, local: true) do |form| %>
  <div class="row">
    <div class="col-xs-12 col-md-6">
      <p>現在アサインされているユーザー</p>
      <p><%= @task.user.name %> <%= image_tag @task.user.icon.variant(resize: "30x30"), class: "rounded-circle" if @task.user.icon.attached?%></p>
    </div>
    <div class="col-xs-12 col-md-6">
      <p>新しくアサインするユーザー</p>
      <div class="field">
        <%= form.collection_select :user_id, User.all, :id, :name, {prompt: ""}, {class: "form-control"} %>
      </div>
    </div>
    <div class="col-xs-12 col-md-6">
      <div class="assign-actions">
        <%= form.submit "アサイン", class: "btn btn-success" %>
      </div>
    </div>
  </div>
<% end %>


<div class="jumbotron my-2">
  <div>
    <h2><%= @task.title %></h2>
      <div>
        <strong>内容:</strong>
        <%= @task.content %>
      </div>
      <div>
        <strong>期限:</strong>
        <%= @task.deadline.strftime('%Y/%m/%d - %H:%M') %>
      </div>
      <div>
        <strong>ステータス:</strong>
        <%= @task.status %>
      </div>
  </div>
</div>
